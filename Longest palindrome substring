class Solution:
    def longestPalindrome(self, s: str) -> str:
        def is_palindrome(s):
            return s == s[::-1]
        
        max_len = 0
        result = ""
        n = len(s)
        
        for i in range(n):
            for j in range(i, n):
                substr = s[i:j+1]
                if is_palindrome(substr) and len(substr) > max_len:
                    max_len = len(substr)
                    result = substr
        
        return result
